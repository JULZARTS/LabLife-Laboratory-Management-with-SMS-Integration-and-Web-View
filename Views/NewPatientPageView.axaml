<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	         xmlns:vm="using:LabLife.ViewModels"
	         xmlns:v="using:LabLife.Views"
             mc:Ignorable="d" d:DesignWidth="990" d:DesignHeight="850"
             x:Class="LabLife.Views.NewPatientPageView"
			 x:DataType="vm:NewPatientPageViewModel">

	<Design.DataContext>
		<vm:NewPatientPageViewModel/>
	</Design.DataContext>

	


		<Border BorderBrush="Black" BorderThickness="1.5" Height="630" Width="900">
			<StackPanel Background="DarkGray" Orientation="Horizontal" HorizontalAlignment="Center"
			>
				<Grid 
					Background="GhostWhite" Height="600" Width="450"
				>
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
					</Grid.RowDefinitions>
					
					<Grid.ColumnDefinitions>
						<ColumnDefinition/>
						<ColumnDefinition/>
						<ColumnDefinition/>
					</Grid.ColumnDefinitions>
					
					<TextBlock Grid.Row="0" Grid.Column="0" Width="130"
					           Text="First Name" TextAlignment="Left" 
					/>
					
					<TextBlock Grid.Row="0" Grid.Column="1" Width="130"
					           Text="Last Name" TextAlignment="Left"
					/>
					
					<TextBlock Grid.Row="0" Grid.Column="2" Width="130"
					           Text="Middle Name" TextAlignment="Left"
					/>
					<TextBox Grid.Row="1" Grid.Column="0" Height="10" Width="130" />
					<TextBox Grid.Row="1" Grid.Column="1" Height="10" Width="130" />
					<TextBox Grid.Row="1" Grid.Column="2" Height="10" Width="130" />
					
					<TextBlock Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" 
					           Text="Date of Birth" HorizontalAlignment="Center"
					           Margin="0 10 0 0"
					/>
					<DatePicker Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3"
					            Name="DOBDatePicker" Width="300" 
					            VerticalAlignment="Center" HorizontalAlignment="Center"
					/>

					
				</Grid>
		
				<Border BorderBrush="Black" BorderThickness="1.5">
					<Grid
						Background="WhiteSmoke" Height="600" Width="450"
						RowDefinitions="*,*" ColumnDefinitions="150,150,150"
					>
					</Grid>
				</Border>
			</StackPanel>
		</Border>
		 

</UserControl>


